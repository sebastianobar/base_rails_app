<% content_for :title, "Change Password" %>

<div class="hero lg:min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse gap-8">
    <div class="text-center lg:text-left">
      <h1 class="text-3xl md:text-4xl font-bold">Choose a new password</h1>
      <p class="py-2 text-base-content/70">Enter a new password for your account.</p>
    </div>

    <div class="card w-full max-w-md shadow-lg bg-base-100">
      <div class="card-body p-8">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :patch }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <%= f.hidden_field :reset_password_token, value: params[:reset_password_token] %>

          <div class="form-control mb-4">
            <%= f.label :password, class: "input w-full" do %>
              <span class="label">New password</span>
              <%= f.password_field :password, autocomplete: "new-password", required: true %>
            <% end %>
          </div>

          <div class="form-control mb-6">
            <%= f.label :password_confirmation, class: "input w-full" do %>
              <span class="label">Confirm password</span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
            <% end %>
          </div>

          <div class="form-control">
            <%= f.submit "Change my password", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider my-6">OR</div>

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
