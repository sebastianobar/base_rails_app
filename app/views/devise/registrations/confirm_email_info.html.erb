<div class="md:min-h-screen flex items-center justify-center bg-base-200 p-6">
  <div class="card w-full max-w-md bg-base-100 shadow-md rounded-lg">
    <div class="card-body items-center text-center">
      <div class="avatar avatar-placeholder">
        <div class="bg-base-200 text-neutral-content w-24 rounded-full">
          <!-- replaced broken SVG with a simple, reliable emoji icon styled to match DaisyUI theme -->
          <svg class="w-8 h-8 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true" role="img">
            <rect x="2" y="5" width="20" height="14" rx="3" ry="3" stroke-width="1.5" />
            <path d="M3 7l9 6 9-6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
      </div>
      <h2 class="card-title text-lg"><%= t('devise.registrations.signed_up_but_unconfirmed') %></h2>
      <div class="card-actions mt-4 w-full justify-center gap-2">
        <%= link_to new_user_confirmation_path, class: "btn btn-sm btn-outline" do %>
          <%= t('.resend_confirmation', default: 'Resend confirmation email') %>
        <% end %>
        <%= link_to root_path, class: "btn btn-sm btn-ghost" do %>
          <%= t('.return_home', default: 'Return to home') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
