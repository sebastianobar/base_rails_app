<% content_for :title, t('.resend_confirmation_instructions') %>

<div class="hero lg:min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse gap-8">
    <div class="text-center lg:text-left">
      <h1 class="text-3xl md:text-4xl font-bold"><%= t('.resend_confirmation_instructions') %></h1>
      <p class="py-2 text-base-content/70"><%= t('.subtitle') %></p>
    </div>

    <div class="card w-full max-w-md shadow-lg bg-base-100">
      <div class="card-body p-8">
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-control mb-6">
            <%= f.label :email, class: "input w-full" do %>
              <span class="label"><%= resource.class.human_attribute_name(:email) %></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
            <% end %>
          </div>

          <div class="form-control">
            <%= f.submit t('.resend_confirmation_instructions'), class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider my-6">OR</div>

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
